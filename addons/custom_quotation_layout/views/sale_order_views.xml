<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kế thừa template báo giá mặc định -->
    <template id="custom_sale_order_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='page']" position="replace">
            <!-- Tùy chỉnh layout mới -->
            <div class="page" style="font-family: Arial, sans-serif; border: 1px solid #ddd; padding: 20px;">
                <h2>BÁO GIÁ TÙY CHỈNH 123</h2>
                <p>Khách hàng: <span t-field="doc.partner_id.name"/></p>
                <p>Ngày báo giá: <span t-field="doc.date_order"/></p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.order_line" t-as="line">
                            <td><span t-field="line.product_id.name"/></td>
                            <td><span t-field="line.product_uom_qty"/></td>
                            <td><span t-field="line.price_unit"/></td>
                            <td><span t-field="line.price_subtotal"/></td>
                        </tr>
                    </tbody>
                </table>
                <p>Tổng cộng: <span t-field="doc.amount_total"/></p>
            </div>
        </xpath>
    </template>
</odoo>