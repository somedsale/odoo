<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.report.wizard.form</field>
        <field name="model">sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Sale Report">
                <group>
                    <p>Click below to generate or preview a report for the current week, month, and quarter.</p>
                    <field name="sale_order_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="preview_report" string="Preview" type="object" class="btn-primary"/>
                    <button name="generate_report" string="Generate PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Sale Report</field>
        <field name="res_model">sale.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_report" name="Sale Quotation Report" parent="sale.sale_menu_root" action="action_sale_report_wizard" sequence="100" groups="sales_team.group_sale_manager"/>
</odoo>