<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_expense_dashboard_tree" model="ir.ui.view">
        <field name="name">project.expense.dashboard.tree</field>
        <field name="model">project.expense.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="total_estimate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="total_actual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="progress" widget="progressbar"/>
                <field name ="currency_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_project_expense_dashboard_form" model="ir.ui.view">
        <field name="name">project.expense.dashboard.form</field>
        <field name="model">project.expense.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="cost_estimate_id"/>
                            <field name ="currency_id" invisible ="1"/>
                        </group>
                        <group>
                            <field name="total_estimate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_actual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                        <div class="oe_button_box" name="button_box">
                            <field name="payment_request_count" widget="statinfo"/>
                            <button name="action_view_payment_requests" type="object" class="oe_stat_button" icon="fa-file-alt">
                                <div>
                                    <span class="o_stat_text">Phiếu chi của dự án</span>
                                </div>
                            </button>
                        </div>
                    </group>
                    <field name="cost_estimate_line_ids">
                        <tree create="false" edit="false" delete="false">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit"/>
                            <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Tổng"/>
                            <field name ="currency_id" optional="hide"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_expense_dashboard" model="ir.actions.act_window">
        <field name="name">Bảng điều khiển chi phí dự án</field>
        <field name="res_model">project.expense.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Nhấn để tạo mới một báo cáo chi phí dự án.
            </p>
        </field>
    </record>

    <menuitem id="menu_project_expense_dashboard" name="Bảng điều khiển chi phí" parent="custom_account_menu.menu_accounting_custom_root" action="action_project_expense_dashboard" sequence="10"/>
</odoo>