<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_contract_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="contract">
                <div class="page">
                    <h2>Sale Contract: <span t-field="contract.name"/></h2>
                    <p>Customer: <span t-field="contract.partner_id"/></p>
                    <p>Date: <span t-field="contract.date_contract"/></p>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Taxes</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="contract.contract_line_ids" t-as="line">
                                <tr>
                                    <td><span t-field="line.product_id"/></td>
                                    <td><span t-field="line.name"/></td>
                                    <td><span t-field="line.quantity"/></td>
                                    <td><span t-field="line.price_unit"/></td>
                                    <td><span t-field="line.tax_id"/></td>
                                    <td><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <p>Total: <span t-field="contract.amount_total"/></p>
                    <p>Terms and Conditions: <span t-field="contract.note"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>