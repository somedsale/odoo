<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_contract_tree" model="ir.ui.view">
        <field name="name">sale.contract.tree</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <tree string="Sale Contracts">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_contract"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_contract_form" model="ir.ui.view">
        <field name="name">sale.contract.form</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <form string="Sale Contract">
                <header>
                    <button name="action_send" string="Send" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_sign" string="Sign" type="object" class="oe_highlight" invisible="state != 'sent'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'sent')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="date_contract"/>
                    </group>
                    <notebook>
                        <page string="Contract Lines">
                            <field name="contract_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Terms">
                            <field name="note"/>
                        </page>
                    </notebook>
                    <group>
                        <field name="amount_total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="action_sale_contract" model="ir.actions.act_window">
        <field name="name">Sale Contracts</field>
        <field name="res_model">sale.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sale_contract" name="Sale Contracts" parent="sale.menu_sale_order" action="action_sale_contract" sequence="10"/>
</odoo>