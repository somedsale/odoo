<odoo>
    <data>
        <record id="view_order_form_inherit_custom_fields" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.custom.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="x_thongso" widget="char" style="max-width:150px" class="oe_ellipsis"/>
                    <field name="x_xuatxu" widget="char" style="max-width:150px" class="oe_ellipsis"/>
                    <field name="x_hangsx" widget="char" style="max-width:150px" class="oe_ellipsis"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_including_transport"/>
                    <field name="is_including_installation"/>
                    <field name="x_estimated_delivery_time_id" options="{'no_create': False}" />
                    <field name="x_warranty_duration_id" options="{'no_create': False}"/>
                    <field name ="x_custom_payment_terms" options="{'no_create': False}"/>
                    <field name="x_delivery_location"/>
                    <field name="x_payment_method_id" options="{'no_create': False}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
  