<odoo>
    <record id="view_account_payment_request_tree" model="ir.ui.view">
        <field name="name">account.payment.request.tree</field>
        <field name="model">account.payment.request</field>
        <field name="arch" type="xml">
            <tree >
                <field name="currency_id" optional="hide"/>
                <field name="name" string="Mã phiếu chi"/>
                <field name="proposal_sheet_id" string="Phiếu đề xuất"/>
                <field name ="project_id" string="Dự án"/>
                <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-muted="state == 'draft'" decoration-primary="state == 'confirmed'" decoration-success="state == 'done'"/>
                <field name="status_expense" widget="badge" string="Trạng thái chi tiền" decoration-danger="status_expense == 'not yet'" decoration-success="status_expense == 'paid'"/>
            </tree>
        </field>
    </record>
    <record id="view_account_payment_request_form" model="ir.ui.view">
        <field name="name">account.payment.request.form</field>
        <field name="model">account.payment.request</field>
        <field name="arch" type="xml">
            <form string="Phiếu chi">
                <field name="status_expense" invisible="1"/>
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" class="btn-primary" invisible="state != &apos;draft&apos;"/>
                    <!-- <button name="action_post" string="Vào sổ bút toán" type="object" class="btn-success" invisible="state != &apos;confirmed&apos;"/> -->
                    <button name="action_payment_request" string="Ghi nhận thanh toán" type="object" class="btn-success" invisible="state != &apos;confirmed&apos;"/>
                    <!-- <button name="action_cancel" string="Hủy" type="object" class="btn-danger" invisible="state != &apos;draft&apos;"/> -->
                    <field name="state" widget="statusbar" statusbar_visible="confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="2" name="Thông tin">
                        <group>
                            <field name="proposal_sheet_id" readonly="1"/>
                            <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="payment_person" widget="many2one_avatar_user" readonly="1"/>
                            <field name="note"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="project_id"/>
                            <field name="date" readonly="1"/>
                            <field name="proposal_person_id" widget="many2one_avatar_user" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_account_payment_request_kanban" model="ir.ui.view">
        <field name="name">account.payment.request.kanban</field>
        <field name="model">account.payment.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example" create="false">
                <field name="state"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="total"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="proposal_sheet_id"/>
                                </strong>
                                <div>
                                    <span>Ngày:</span>
                                    <field name="date"/>
                                </div>
                                <div>
                                    <span>Dự án:</span>
                                    <field name="project_id"/>
                                </div>
                                <div>
                                    <span>Số tiền:</span>
                                    <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <div>
                                    <span>Trạng thái:</span>
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_account_payment_request_search" model="ir.ui.view">
        <field name="name">account.payment.request.search</field>
        <field name="model">account.payment.request</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu chi">
                <filter string="Đã xác nhận" name="confirmed" domain="[('state','=','confirmed')]" />
                <searchpanel>
                    <field name="project_id" string="Dự án" />
                    <field name="state" string="Trạng thái" icon="fa-bullseye" select="multi"/>
                    <field name="status_expense" string="Trạng thái chi" icon="fa-bullseye" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="view_account_payment_request_search_no_panel" model="ir.ui.view">
        <field name="name">account.payment.request.search.no.panel</field>
        <field name="model">account.payment.request</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm">
                <!-- chỉ để ô tìm kiếm -->
            </search>
        </field>
    </record>
    <record id="action_account_payment_request" model="ir.actions.act_window">
        <field name="name">Phiếu chi</field>
        <field name="res_model">account.payment.request</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_account_payment_request_search"/>
    </record>
    <record id="action_account_payment_request_without_searchpanel" model="ir.actions.act_window">
        <field name="name">Phiếu chi</field>
        <field name="res_model">account.payment.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_account_payment_request_search_no_panel"/>
    </record>

    <menuitem id="menu_accounting_payment_request" name="Phiếu chi" parent="custom_account_menu.menu_accounting_vouchers" action="action_account_payment_request"/>

</odoo>