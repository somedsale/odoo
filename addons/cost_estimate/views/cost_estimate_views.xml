<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW COST ESTIMATE -->
    <record id="view_cost_estimate_tree" model="ir.ui.view">
        <field name="name">cost.estimate.tree</field>
        <field name="model">cost.estimate</field>
        <field name="priority" eval="5"/>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="create_date" string="Ngày tạo"/>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="project_id"/>
                <field name="total_cost" sum="Tổng" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name ="state" optional="hide" widget="badge" decoration-muted="state == 'draft'" decoration-primary="state == 'summitted'" decoration-success="state == 'approved'"/>
                <field name="currency_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW COST ESTIMATE -->
    <record id="view_cost_estimate_form" model="ir.ui.view">
        <field name="name">cost.estimate.form</field>
        <field name="model">cost.estimate</field>
        <field name="priority" eval="5"/>
        <field name="arch" type="xml">

            <form string="Dự toán chi phí Dự án">
                <field name="show_button_submit" invisible="1"/>
                <field name="show_button_approve" invisible="1"/>
                <field name="show_button_cancel" invisible="1"/>
                <field name="show_button_draft" invisible="1"/>
                <header>
                    <button name="action_submit" type="object" string="Gửi duyệt" invisible="show_button_submit == False" class="oe_highlight"/>
                    <button name="action_approve" type="object" string="Duyệt" invisible="show_button_approve == False" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Hủy" invisible="show_button_cancel == False" class="oe_highlight" confirm="Bạn có chắc muốn hủy không?" />
                    <button name="action_draft" type="object" string="Trở về nháp" invisible="show_button_draft == False" class="oe_highlight" confirm="Chắc chắn muốn chuyển thành nháp?" />
                    <field name="state" widget="statusbar" statusbar_visible="submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="project_id" readonly="1"/>
                            <field name="total_cost" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1" optional="hide"/>
                        </group>
                        <group>
                            <field name="create_date" string="Ngày tạo" readonly="1"/>
                            <field name="sale_order_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết dòng dự toán">
                            <field name="line_ids" editable="bottom" context="{'default_cost_estimate_id': active_id}" options="{'no_open': True}" readonly="state == 'approved'">
                                <tree view_id="view_cost_estimate_line_tree"/>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW COST ESTIMATE LINE -->
    <record id="view_cost_estimate_line_tree" model="ir.ui.view">
        <field name="name">cost.estimate.line.tree</field>
        <field name="model">cost.estimate.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" context="{'no_default_code': True}" required="1"/>
                <field name="quantity" required="1"/>
                <field name="unit" required="1"/>
                <field name="price_unit" readonly="1"/>
                <field name="price_subtotal" readonly="1"/>
            </tree>
        </field>
    </record>
    <!-- FORM VIEW COST ESTIMATE LINE -->
    <record id="view_cost_estimate_line_form" model="ir.ui.view">
        <field name="name">cost.estimate.line.form</field>
        <field name="model">cost.estimate.line</field>
        <field name="arch" type="xml">
            <form string="Chi tiết dòng dự toán">
                <sheet>
                    <group col="2">
                        <group string="Thông tin dự toán">
                            <field name="is_from_sale_order" invisible="1"/>
                            <field name="product_type" invisible="1"/>
                            <field name="product_id" context="{'no_default_code': True}" readonly="is_from_sale_order"/>
                            <field name="quantity" readonly="is_from_sale_order"/>
                            <field name="unit" readonly="is_from_sale_order"/>
                            <field name="price_unit" string="Giá thành trên 1 sản phẩm" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                            <field name="currency_id" invisible="1" optional="hide"/>
                        </group>

                        <group string="Phân loại chi phí">
                            <field name="material_total_cost" readonly="1"/>
                            <field name="labor_total_cost" readonly="1"/>
                            <!-- <field name="equipment_total_cost" readonly="1"/> -->
                        </group>
                    </group>
                    <group col="2" invisible="product_type != 'service'">
                        <group string="Thông tin dự toán">
                            <field name="is_from_sale_order" invisible="1"/>
                            <field name="product_type" invisible="1"/>
                            <field name="product_id" context="{'no_default_code': True}" readonly="is_from_sale_order"/>
                            <field name="quantity" readonly="is_from_sale_order"/>
                            <field name="unit" readonly="is_from_sale_order"/>
                            <field name="price_unit" string="Đơn giá" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi phí nguyên vật liệu">
                            <field name="material_line_ids" context="{'default_estimate_line_id': active_id}" mode="tree,form">
                                <tree editable="bottom" view_id="project_material.view_product_material_line_tree"/>
                                <form view_id="project_material.view_product_material_line_form"/>
                            </field>
                        </page>
                        <page string="Chi phí nhân công">
                            <field name="labor_expense_line_ids" context="{'default_estimate_line_id': active_id, 'default_type': 'labor'}" mode="tree,form">
                                <tree editable="bottom">
                                    <field name="expense_id" context="{'default_type': 'labor'}" string="Chi phí nhân công" domain="[('type', '=', 'labor')]" />
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="price_unit"/>
                                    <field name="price_total" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="expense_id" context="{'default_type': 'labor'}" string="Chi phí nhân công" domain="[('type', '=', 'labor')]" />
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="price_unit"/>
                                        <field name="price_total" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Chi phí khác (Sản xuất chung)">
                            <field name="expense_line_ids" context="{'default_estimate_line_id': active_id, 'default_type': 'other'}" mode="tree,form">
                                <tree editable="bottom">
                                    <field name="expense_id" context="{'default_type': 'other'}" domain="[('type', '=', 'other')]" string="Chi phí sản xuất chung"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="price_unit"/>
                                    <field name="price_total" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="expense_id" context="{'default_type': 'other'}" domain="[('type', '=', 'other')]" string="Chi phí sản xuất chung"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="price_unit"/>
                                        <field name="price_total" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- <page string="Chi phí khác" invisible="product_type != 'service'">
                            <field name="expense_line_ids" context="{'default_estimate_line_id': active_id, 'default_type': 'other'}" mode="tree,form">
                                <tree editable="bottom">
                                    <field name="expense_id" context="{'default_type': 'other'}" domain="[('type', '=', 'other')]" string="Chi phí khác"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="price_unit"/>
                                    <field name="price_total" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="expense_id" context="{'default_type': 'other'}" domain="[('type', '=', 'other')]" string="Chi phí khác"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="price_unit"/>
                                        <field name="price_total" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION FOR COST ESTIMATE -->
    <record id="action_cost_estimate" model="ir.actions.act_window">
        <field name="name">Dự toán chi phí Dự án</field>
        <field name="res_model">cost.estimate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_cost_estimate_root" name="Dự toán chi phí" parent="project.menu_main_pm"/>
    <menuitem id="menu_cost_estimate_main" name="Quản lý dự toán" parent="menu_cost_estimate_root" action="action_cost_estimate"/>
</odoo>
