<odoo>
    <record id="view_supplier_settlement_tree" model="ir.ui.view">
        <field name="name">supplier.settlement.tree</field>
        <field name="model">supplier.settlement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_id"/>
                <field name="date"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_supplier_settlement_form" model="ir.ui.view">
        <field name="name">supplier.settlement.form</field>
        <field name="model">supplier.settlement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contract_id"/>
                        <field name="date"/>
                        <field name="amount"/>
                    </group>
                    <group string="Hóa đơn">
                        <field name="invoice_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_supplier_settlement" model="ir.actions.act_window">
        <field name="name">Hồ sơ quyết toán</field>
        <field name="res_model">supplier.settlement</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
