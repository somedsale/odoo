<odoo>
    <record id="view_product_material_line_tree" model="ir.ui.view">
        <field name="name">product.material.line.tree</field>
        <field name="model">product.material.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="material_id" />
                <field name="quantity"/>
                <field name="unit" widget="selection" options="{'no_create': True}" string="Đơn vị"/>
                <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="price_total" sum="Tổng thành tiền" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>
</odoo>