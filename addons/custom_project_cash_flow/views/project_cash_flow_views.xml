<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_cash_flow_tree" model="ir.ui.view">
        <field name="name">project.cash.flow.tree</field>
        <field name="model">project.cash.flow</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="type" widget="badge" decoration-success="type == 'in'" decoration-primary="type == 'out'"/>
                <field name="project_id"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="receipt_id" optional="show"/>
                <field name="account_payment_id" optional="show"/>
                <field name ="currency_id" optional="hide"/>
                <field name="total_in_all" optional="hide"/>
                <field name="total_out_all" optional="hide"/>
                <field name="balance_all" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_project_cash_flow_form" model="ir.ui.view">
        <field name="name">project.cash.flow.form</field>
        <field name="model">project.cash.flow</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <group>
                        <field name="name"/>
                        <field name="date" readonly="1"/>
                        <field name="project_id" readonly="1"/>
                        <field name="amount" readonly="1"/>
                    </group>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="currency_id" invisible ="1"/>
                        <field name="type" readonly="1"/>
                        <field name="account_payment_id" invisible="type == 'in'" readonly="type == 'out'"/>
                        <field name="receipt_id" invisible="type == 'out'" readonly="type == 'in'"/>
                        <field name="note"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="view_project_cash_flow_graph" model="ir.ui.view">
        <field name="name">project.cash.flow.graph</field>
        <field name="model">project.cash.flow</field>
        <field name="arch" type="xml">
            <graph type="bar" stacked="True" sample="1">
                <field name="project_id" type="row"/>
                <field name="amount" type="measure"/>
                <field name="type" type="col"/>
            </graph>
        </field>
    </record>
    <record id="action_project_cash_flow" model="ir.actions.act_window">
        <field name="name">Dòng tiền dự án</field>
        <field name="res_model">project.cash.flow</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo và quản lý dòng tiền theo từng dự án.
            </p>
        </field>
        <field name="limit">20</field>
    </record>

    <menuitem id="menu_project_cash_flow" name="Dòng tiền dự án" parent="custom_account_menu.menu_accounting_project" action="action_project_cash_flow" sequence="10"/>
</odoo>
