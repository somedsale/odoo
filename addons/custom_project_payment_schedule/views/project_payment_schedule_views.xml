<!-- views/project_payment_schedule_views.xml -->
<odoo>
    <record id="view_project_payment_schedule_tree" model="ir.ui.view">
        <field name="name">project.payment.schedule.tree</field>
        <field name="model">project.payment.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name ="partner_id"/>
                <field name="date_due"/>
                <field name="amount" widget="monetary"/>
                <field name="actual_amount" widget="monetary"/>
                <field name="balance_amount" widget="monetary"/>
                <field name="state"/>
                <field name ="currency_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_project_payment_schedule_form" model="ir.ui.view">
        <field name="name">project.payment.schedule.form</field>
        <field name="model">project.payment.schedule</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="project_id"/>
                    <field name ="partner_id"/>
                    <field name="date_due"/>
                    <field name="amount" widget="monetary"/>
                    <field name="actual_amount" readonly="1" widget="monetary"/>
                    <field name="balance_amount" readonly="1" widget="monetary"/>
                    <field name="state" readonly="1" />
                    <field name="description"/>
                    <field name ="currency_id" invisible="1"/>
                </group>
                <notebook>
                    <page string="Phiếu thu">
                        <field name="receipt_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="amount" widget="monetary"/>
                                <field name="date"/>
                                <field name="partner_id" />
                                <field name ="x_payment_method_id"/>
                                <field name="state"/>
                                <field name="project_id" optional="hide"/>
                                <field name ="currency_id" optional="hide"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_project_payment_schedule" model="ir.actions.act_window">
        <field name="name">Đợt thanh toán dự án</field>
        <field name="res_model">project.payment.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Quản lý tiến độ thanh toán của từng dự án</p>
        </field>
    </record>

    <menuitem id="menu_project_payment_schedule_root" name="Thanh toán dự án" parent="project.menu_project_config" action="action_project_payment_schedule"/>
</odoo>