<odoo>
    <!-- Form view cho Wizard -->
    <record id="view_supplier_summary_wizard_form" model="ir.ui.view">
        <field name="name">supplier.summary.wizard.form</field>
        <field name="model">supplier.summary.wizard</field>
        <field name="arch" type="xml">
            <form >
                <group>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="action_view_report"
                            type="object"
                            string="Xem báo cáo"
                            class="btn-primary"/>
                    <button string="Hủy"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action mở wizard -->
    <record id="action_supplier_summary_wizard" model="ir.actions.act_window">
        <field name="name">Báo cáo công nợ NCC</field>
        <field name="res_model">supplier.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_supplier_summary_report_test_hihi"
              name="Chi tiết công nợ NCC"
              parent="menu_supplier_summary_root"
              action="action_supplier_summary_wizard"
              sequence="50"/>
</odoo>
