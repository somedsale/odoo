<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_project_expense_detail_tree" model="ir.ui.view">
        <field name="name">project.expense.detail.tree</field>
        <field name="model">project.expense.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="estimate_line_id"/>
                <field name="category"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="total_amount" sum="Total"/>
                <field name="currency_id"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_project_expense_detail_form" model="ir.ui.view">
        <field name="name">project.expense.detail.form</field>
        <field name="model">project.expense.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="estimate_line_id"/>
                        <field name="category"/>
                        <field name="quantity"/>
                        <field name="price_unit"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="currency_id"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_project_expense_detail" model="ir.actions.act_window">
        <field name="name">Chi phí chi tiết dự án</field>
        <field name="res_model">project.expense.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': ['project_id','estimate_line_id']}</field>
        <field name="help" type="html">
            <p>Quản lý chi phí chi tiết theo từng dự án và đầu mục dự toán.</p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_project_expense_detail_root" name="Chi tiết chi phí dự án" parent="custom_account_menu.menu_accounting_custom_root" action="action_project_expense_detail" sequence="50"/>
</odoo>
