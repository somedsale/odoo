<odoo>
    <record id="view_task_form_inherit_cost" model="ir.ui.view">
        <field name="name">project.task.form.cost</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Chi phí Task">
                    <field name="amount_task_cost" readonly="1"/>
                    <field name="cost_line_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="cost_type"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal" readonly="1"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_project_form_inherit_cost" model="ir.ui.view">
        <field name="name">project.project.form.cost</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Tổng chi phí dự án">
                    <field name="amount_project_cost" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
