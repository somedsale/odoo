<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_contract_tree" model="ir.ui.view">
        <field name="name">sale.contract.tree</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_contract"/>
                <field name="amount_total"/> <!-- Đảm bảo sử dụng amount_total -->
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_contract_form" model="ir.ui.view">
        <field name="name">sale.contract.form</field>
        <field name="model">sale.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state in ['confirmed', 'done']"/>
                    <button name="action_done" string="Mark as Done" type="object" class="btn-primary" invisible="state in ['done', 'cancel']"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state == 'cancel'"/>
                    <button name="action_create_from_sale_order" string="Load from Sale Order" type="object" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="sale_order_id"/>
                        <field name="date_contract"/>
                        <field name="amount_total"/> <!-- Đảm bảo sử dụng amount_total -->
                    </group>
                    <notebook>
                        <page string="Contract Lines">
                            <field name="contract_lines">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Terms and Conditions">
                            <field name="terms_conditions" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_sale_contract" model="ir.actions.act_window">
        <field name="name">Sale Contracts</field>
        <field name="res_model">sale.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sale_contract" name="Sale Contracts" parent="sale.sale_menu_root" action="action_sale_contract" sequence="20"/>
</odoo>