<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_cash_flow_tree" model="ir.ui.view">
        <field name="name">project.cash.flow.tree</field>
        <field name="model">project.cash.flow</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="type"/>
                <field name="amount"/>
                <field name="project_id"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_project_cash_flow_form" model="ir.ui.view">
        <field name="name">project.cash.flow.form</field>
        <field name="model">project.cash.flow</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="project_id"/>
                    <field name="type"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="partner_id"/>
                    <field name="receipt_id"/>
                    <!-- <field name="account_payment_id"/> -->
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_project_cash_flow" model="ir.actions.act_window">
        <field name="name">Dòng tiền dự án</field>
        <field name="res_model">project.cash.flow</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo và quản lý dòng tiền theo từng dự án.
            </p>
        </field>
    </record>

    <menuitem id="menu_project_cash_flow" name="Dòng tiền dự án" parent="custom_account_menu.menu_accounting_custom_root" action="action_project_cash_flow" sequence="10"/>
</odoo>
