<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view cho danh sách nhà cung cấp với tổng hợp -->
    <record id="view_partner_contract_summary_tree" model="ir.ui.view">
        <field name="name">supplier.debt.summary.contract.summary.tree</field>
        <field name="model">supplier.debt.summary</field>
        <field name="arch" type="xml">
            <tree string="Tổng hợp hợp đồng nhà cung cấp">
                <field name="supplier_id" string="Tên nhà cung cấp"/>
                <field name="total_contract_value" string="Tổng giá trị hợp đồng"/>
                <field name="total_invoice_amount" string="Tổng giá trị hóa đơn"/>
                <field name="total_due_amount" string="Tổng số tiền còn nợ"/>
            </tree>
        </field>
    </record>

    <!-- Form view mới cho nhà cung cấp với chi tiết hợp đồng -->
    <record id="view_partner_contract_summary_form" model="ir.ui.view">
        <field name="name">supplier.debt.summary.contract.summary.form</field>
        <field name="model">supplier.debt.summary</field>
        <field name="arch" type="xml">
            <form string="Chi tiết hợp đồng nhà cung cấp">
                <sheet>
                    <group>
                        <field name="supplier_id" string="Tên nhà cung cấp"/>
                        <field name="total_contract_value" string="Tổng giá trị hợp đồng" readonly="1"/>
                        <field name="total_invoice_amount" string="Tổng giá trị hóa đơn" readonly="1"/>
                        <field name="total_due_amount" string="Tổng số tiền còn nợ" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Danh sách hợp đồng">
                            <field name="purchase_contract_ids" nolabel="1">
                                <tree>
                                    <field name="name" string="Số hợp đồng"/>
                                    <field name="project_id" string="Dự án"/>
                                    <field name="date_signed" string="Ngày ký"/>
                                    <field name="value" string="Giá trị hợp đồng"/>
                                    <field name="invoice_amount" string="Tổng giá trị hóa đơn"/>
                                    <field name="paid_amount" string="Số tiền đã thanh toán"/>
                                    <field name="due_amount" string="Số tiền còn nợ"/>
                                    <field name="state" string="Trạng thái"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho danh sách nhà cung cấp với tổng hợp -->
    <record id="action_supplier_contract_summary" model="ir.actions.act_window">
        <field name="name">Tổng hợp hợp đồng nhà cung cấp</field>
        <field name="res_model">supplier.debt.summary</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_partner_contract_summary_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_partner_contract_summary_form')})
        ]"/>
        <field name="domain">[('supplier_rank', '&gt;', 0)]</field>
        <field name="context">{'search_default_supplier': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có nhà cung cấp nào. Hãy tạo mới!
            </p>
        </field>
    </record>

    <!-- Action cho danh sách nhà cung cấp với tổng hợp -->
    <record id="action_supplier_contract_summary" model="ir.actions.act_window">
        <field name="name">Tổng hợp hợp đồng nhà cung cấp</field>
        <field name="res_model">supplier.debt.summary</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_partner_contract_summary_tree"/>
        <field name="domain">[('supplier_rank', '&gt;', 0)]</field>
        <field name="context">{'search_default_supplier': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có nhà cung cấp nào. Hãy tạo mới!
            </p>
        </field>
    </record>


</odoo>