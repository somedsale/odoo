<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.sale.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='general_settings']" position="inside">
                <h2>Sale Report Settings</h2>
                <group>
                    <field name="week_start_date" string="Default Week Start Date"/>
                    <field name="contract_ids" widget="many2many_tags" string="Default Contracts"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>