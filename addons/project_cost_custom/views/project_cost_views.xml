<odoo>
    <!-- Action trước -->
    <record id="action_project_cost" model="ir.actions.act_window">
        <field name="name">Chi phí dự án</field>
        <field name="res_model">project.cost</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_project_cost_root" name="Chi phí dự án" parent="project.menu_main_pm"/>
    <menuitem id="menu_project_cost" name="Danh sách chi phí" parent="menu_project_cost_root" action="action_project_cost"/>

    <!-- Views -->
    <record id="view_project_cost_form" model="ir.ui.view">
        <field name="name">project.cost.form</field>
        <field name="model">project.cost</field>
        <field name="arch" type="xml">
            <form string="Chi phí dự án">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="total_actual_cost" readonly="1"/>
                    </group>
                    <field name="cost_line_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="actual_amount"/>
                            <field name="date"/>
                            <field name="note"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_cost_tree" model="ir.ui.view">
        <field name="name">project.cost.tree</field>
        <field name="model">project.cost</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="total_actual_cost"/>
            </tree>
        </field>
    </record>
</odoo>
