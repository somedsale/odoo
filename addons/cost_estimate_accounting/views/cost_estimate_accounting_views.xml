<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cost_estimate_accounting_tree" model="ir.ui.view">
        <field name="name">cost.estimate.accounting.tree</field>
        <field name="model">cost.estimate.accounting</field>
        <field name="arch" type="xml">
            <tree string="Dự toán kế toán" create="false" edit="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="sale_order_id"/>
                <field name="total_cost" sum="Tổng" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                <field name ="currency_id" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_cost_estimate_accounting_form" model="ir.ui.view">
        <field name="name">cost.estimate.accounting.form</field>
        <field name="model">cost.estimate.accounting</field>
        <field name="arch" type="xml">
            <form string="Dự toán kế toán" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="cost_estimate_id" readonly="1"/>
                        </h1>
                    </div>
                    <!-- <group>
                        <field name="cost_estimate_id"/>
                        <field name="total_cost" sum="Tổng" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                        <field name ="currency_id" invisible="1"/>
                    </group> -->
                    <field name="line_ids">
                        <tree create="false" edit="false" delete="false">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit"/>
                            <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Tổng"/>
                            <field name ="currency_id" optional="hide"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho kế toán -->
    <record id="action_cost_estimate_accounting" model="ir.actions.act_window">
        <field name="name">Dự toán chi phí (Kế toán)</field>
        <field name="res_model">cost.estimate.accounting</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_cost_estimate_accounting" name="Dự toán chi phí(KT)" parent="custom_account_menu.menu_accounting_custom_root" action="action_cost_estimate_accounting" sequence="10"/>
</odoo>
