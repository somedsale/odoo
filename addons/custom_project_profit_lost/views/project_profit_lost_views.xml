    <record id="action_open_project_profit_lost" model="ir.actions.server">
        <field name="name">Mở phân tích lời lỗ</field>
        <field name="model_id" ref="model_project_profit_lost"/>
        <field name="state">code</field>
        <field name="code">action = model.action_open_profit_lost()</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Nhấn vào đây để tạo mới một bản ghi phân tích lời lỗ công trình.
            </p>
        </field>
    </record>

    <menuitem id="menu_project_profit_lost_root" name="Lời lỗ công trình" parent="custom_account_menu.menu_accounting_project"/>
    <menuitem id="menu_project_profit_lost" name="Phân tích lời lỗ công trình" parent="menu_project_profit_lost_root" action="action_open_project_profit_lost"/>
