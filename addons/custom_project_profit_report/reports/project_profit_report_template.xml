<odoo>
    <template id="custom_project_profit_report.project_profit_template">
        <t t-call="web.html_container">
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&amp;display=swap');

                
                h1 {
                    padding-top: 20px;
                    font-weight: bold;
                    font-family: 'Poppins', sans-serif;
                }
                .cards {
                    display: flex;
                    gap: 20px;
                    margin: 20px 0;
                    font-family: 'Poppins', sans-serif;
                }

                .card {
                    flex: 1;
                    background: #fff;
                                                                                                                                                                                                                                                    <!-- border-radius: 10px; -->
                    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
                }

                .card-header {
                    display: flex;
                    align-items: center;
                    justify-content: space-between; /* đẩy icon sang phải */
                    background: #fff;
                    padding: 10px 15px;
                    border: none;
                }

                .card-header h3 {
                    font-size: 16px;
                    color: #666;
                    margin: 0;
                    flex-grow: 1; /* chiếm hết khoảng trống */
                    text-align: center; /* căn giữa text trong phần còn lại */
                }

                .icon-right {
                    font-size: 18px;
                    color: #666; /* mặc định cùng màu text */
                }

                .text-success {
                    color: #27ae60 !important;
                }

                .text-danger {
                    color: #e74c3c !important;
                }

                .card p {
                    font-size: 20px;
                    font-weight: bold;
                    margin: 10px;
                    text-align: center;
                    color: #2c3e50;
                }

                table.report-table{
                    width: 100%;
                    border-collapse: collapse;
                    font-family: 'Poppins', sans-serif;
                    font-size: 15px;
                    border-radius: 10px;
                    overflow: hidden;
                    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
                }
                table.report-table th, table.report-table td {
                    border: 1px solid #ccc;
                    padding: 6px 8px;
                    text-align: center;
                    vertical-align: middle;
                }
                table.report-table th {
                    background-color: #6C7AE0;
                    color: white;
                    font-weight: bold;
                }
                table.report-table tr:hover {
                    background-color: #f0f8ff;
                }
                td.stt {
                    text-align: right;
                    font-weight: bold;
                }
                .money {
                    text-align: right !important;
                }
                table.report-table tbody tr:nth-child(even) {
                    background-color: #f9f9f9;
                }
            </style>

            <h1 style="text-align:center; margin-bottom:20px;">BÁO CÁO TỔNG HỢP LÃI LỖ CÁC CÔNG TRÌNH</h1>

            <!-- Dashboard Cards -->
            <div class="cards">
                <div class="card">
                    <div class="card-header">
                        <h3>Tổng số dự án</h3>
                        <i class="fa fa-folder-open icon icon-right"></i>
                    </div>
                    <p t-esc="len(docs)"/>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Tổng doanh thu</h3>
                        <i class="fa fa-arrow-up icon icon-right text-success"></i>
                    </div>
                    <p>
                        <t t-esc="'{:,.0f}'.format(sum(d['revenue'] for d in docs)).replace(',', '.')"/>
                    </p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Tổng chi phí</h3>
                        <i class="fa fa-arrow-down icon icon-right text-danger"></i>
                    </div>
                    <p>
                        <t t-esc="'{:,.0f}'.format(sum(d['expense'] for d in docs)).replace(',', '.')"/>
                    </p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Lãi / Lỗ</h3>
                        <i class="fa fa-line-chart icon icon-right" style="color:#27ae60;"></i>
                    </div>
                    <p>
                        <t t-esc="'{:,.0f}'.format(sum(d['profit'] for d in docs)).replace(',', '.')"/>
                    </p>
                </div>
            </div>

            <!-- Table Report -->
            <table class="report-table">
                <thead>
                    <tr>
                        <th rowspan="2">STT</th>
                        <th rowspan="2">Dự án</th>
                        <th rowspan="2">Số HĐ</th>
                        <th rowspan="2">Doanh thu</th>
                        <th colspan="4">Chi phí</th>
                        <th rowspan="2">Lãi / Lỗ</th>
                    </tr>
                    <tr>
                        <th>Vật tư</th>
                        <th>Nhân công</th>
                        <th>Sản xuất chung</th>
                        <th>Tổng chi phí</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="counter" t-value="1"/>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td class="stt">
                                <t t-esc="counter"/>
                                <t t-set="counter" t-value="counter + 1"/>
                            </td>
                            <td>
                                <t t-esc="doc['project_id'].name"/>
                            </td>
                            <td>
                                <t t-esc="doc['num_contract']"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['revenue']).replace(',', '.')"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['material_cost'] or 0).replace(',', '.')"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['labor_cost'] or 0).replace(',', '.')"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['other_cost'] or 0).replace(',', '.')"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['expense']).replace(',', '.')"/>
                            </td>
                            <td class="money">
                                <t t-esc="'{:,.0f}'.format(doc['profit']).replace(',', '.')"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
</odoo>
