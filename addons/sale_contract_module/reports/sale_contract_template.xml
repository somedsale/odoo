<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_contract_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Sale Contract: <t t-esc="doc.name"/></h2>
                        <p><strong>Customer:</strong> <t t-esc="doc.partner_id.name"/></p>
                        <p><strong>Sale Order:</strong> <t t-esc="doc.sale_order_id.name"/></p>
                        <p><strong>Date:</strong> <t t-esc="doc.date"/></p>
                        <p><strong>Total Amount:</strong> <t t-esc="doc.amount_total"/> USD</p>
                        <p><strong>Status:</strong> <t t-esc="doc.state"/></p>
                        <h3>Contract Details</h3>
                        <p><t t-esc="doc.contract_details"/></p>
                        <h3>Sale Order Lines</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.sale_order_id.order_line" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.product_id.name"/></td>
                                        <td><t t-esc="line.product_uom_qty"/></td>
                                        <td><t t-esc="line.price_unit"/></td>
                                        <td><t t-esc="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>