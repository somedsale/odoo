<odoo>
    <record id="view_proposal_sheet_form_inherit_payment" model="ir.ui.view">
        <field name="name">proposal.sheet.form.inherit.payment</field>
        <field name="model">proposal.sheet</field>
        <field name="inherit_id" ref="proposal_sheet.view_proposal_sheet_form"/>
        <field name="arch" type="xml">
            <!-- Chèn sau thẻ notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Phiếu Chi" invisible ="state !='waiting_accounting_paid' and state != 'done' " groups="account.group_account_user,account.group_account_manager" context="{'default_proposal_sheet_id': active_id}">
                    <field name="payment_ids">
                        <tree>
                            <field name="name" />
                            <field name="date" string="Ngày tạo chi" />
                            <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Tổng"/>
                            <field name="currency_id" optional="hide"/>
                            <field name="state" string="Trạng thái" widget="badge" decoration-muted="state == 'draft'" decoration-primary="state == 'confirmed'" decoration-success="state == 'done'"/>
                        </tree>
                        <form>
                            <header>
                                <button name="action_confirm" string="Xác nhận" type="object" class="btn-primary" invisible="state != &apos;draft&apos;"/>
                                <!-- <button name="action_post" string="Vào sổ bút toán" type="object" class="btn-success" invisible="state != &apos;confirmed&apos;"/> -->
                                <button name="action_payment_request" string="Ghi nhận thanh toán" type="object" class="btn-success" invisible="state != &apos;confirmed&apos;"/>
                                <!-- <button name="action_cancel" string="Hủy" type="object" class="btn-danger" invisible="state != &apos;draft&apos;"/> -->
                                <field name="state" widget="statusbar" statusbar_visible="confirmed,done"/>
                            </header>
                            <sheet >
                                <group col = '2'>
                                    <group>
                                        <field name="name"/>
                                        <field name="date" readonly="state =='confirmed' or state =='done'"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="state =='confirmed' or state =='done'"/>
                                        <field name="payment_person" widget="many2one_avatar_user" readonly="state =='confirmed' or state =='done'"/>
                                    </group>
                                    <group>
                                        <field name ="project_id" context="{'default_project_id': project_id}"/>
                                        <field name="proposal_sheet_id" readonly="state =='confirmed' or state =='done'"/>
                                        <field name="proposal_person_id" widget="many2one_avatar_user" readonly="state =='confirmed' or state =='done'"/>
                                        <field name="note"/>
                                        <field name="expense_type"  widget="select"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//sheet/group/group/field[@name=&apos;amount_total&apos;]" position="after">
                <field name="payment_total" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
